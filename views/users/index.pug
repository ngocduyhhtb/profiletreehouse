extends ../layouts/general
block content
    .container-fluid.my-5
        .row
            .col-8.offset-2
                .card
                    .card-header.bg-primary.text-white.text-uppercase Users
                    .card-body
                        form.seach-form(action="/users/search")
                            .container
                                h2 Searching
                                .row
                                    .col-6
                                        .form-group
                                            label(for='name') Name
                                            input#name.form-control(name="name", type='text')
                                    .col-6
                                        .form-group
                                            label(for='age') Age
                                            input#age.form-control(name="age", type='number')
                                    .col-12
                                        button.btn.btn-primary(type='submit') Search

                        .users.my-3
                            h2.text-center.text-info.my-3 All users
                            if users.length > 0
                                table.table.table-bordered.text-center
                                    thead
                                        tr.bg-info.text-white
                                            td  ID
                                            th  Name
                                            th  Email
                                            th  Age
                                            th  Action
                                    tbody
                                        each user in users
                                            tr
                                                td.p-4=  user.id
                                                td.p-4=  user.name
                                                td.p-4=  user.email
                                                td.p-4=  user.age
                                                td
                                                    a.btn.btn-info(href="/users/" + user.id) View
                            else
                                p No user to display
                        .row
                            .col-6
                                a.btn.btn-primary.pt-2.pb-2(href="/users/create") Create new user



    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')